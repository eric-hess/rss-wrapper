<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>rss-wrapper</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body data-bs-theme="dark">
        <div class="container">
            <header class="d-flex justify-content-center py-3">
                <ul class="nav nav-pills">
                    {% if app.user %}
                        <li class="nav-item"><a href="{{ path('app_user_list') }}" class="nav-link {% if app.current_route == 'app_user_list' %}active{% endif %}" aria-current="page">user</a></li>
                        <li class="nav-item"><a href="{{ path('app_wrapper_index') }}" class="nav-link {% if app.current_route == 'app_wrapper_index' %}active{% endif %}" aria-current="page">wrapper</a></li>
                        <li class="nav-item"><a href="{{ path('app_logout') }}" class="nav-link {% if app.current_route == 'app_logout' %}active{% endif %}" aria-current="page">logout</a></li>
                    {% else %}
                        <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link {% if app.current_route == 'app_login' %}active{% endif %}" aria-current="page">login</a></li>
                        {% if APP_REGISTRATION_ENABLED %}
                            <li class="nav-item"><a href="{{ path('app_register') }}" class="nav-link {% if app.current_route == 'app_register' %}active{% endif %}" aria-current="page">register</a></li>
                        {% endif %}
                    {% endif %}
                </ul>
            </header>
            {% for message in app.flashes('success') %}
                <div class="alert alert-primary" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>
</html>
